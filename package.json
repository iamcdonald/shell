{
  "name": "shell",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '{src,test}/**/*.{js,jsx}'",
    "start:dev": "webpack serve --mode development --liveReload --inline --host 0.0.0.0 --port 8080",
    "build": "rm -rf public && NODE_ENV=production webpack",
    "test:unit": "jest",
    "test:unit:coverage": "npm run test:unit -- --collectCoverage"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --single-quote --write"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/register": "^7.13.16",
    "@testing-library/dom": "^7.30.4",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.4",
    "cssnano": "^5.0.1",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-semistandard": "^15.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.1.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.5.0",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.12",
    "postcss-import": "^14.0.1",
    "postcss-loader": "^5.2.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.2",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.35.1",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint && npm run test:unit:coverage"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/.jest/identity-obj-proxy-esm.js"
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.spec.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 100
      }
    },
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.spec.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie < 11",
    "not op_mini all"
  ]
}
