{
  "name": "shell",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '{src,test}/**/*.js'",
    "start:dev": "webpack-dev-server --hot --inline --host 0.0.0.0 --port 8080 --no-info",
    "build": "rm -rf public && webpack",
    "test:unit": "jest",
    "test:unit:coverage": "npm run test:unit -- --collectCoverage"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --single-quote --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@testing-library/dom": "^6.12.2",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.3.2",
    "eslint": "^4.1.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-semistandard": "^11.0.0",
    "eslint-config-semistandard-react": "^3.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.1",
    "prettier": "^1.5.2",
    "react-test-renderer": "^15.6.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^0.18.2",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "dependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint && npm run test:unit:coverage"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.scss$": "<rootDir>/.jest/identity-obj-proxy-esm.js"
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.spec.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 100
      }
    },
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.spec.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
