{
  "name": "shell",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '{src,test}/**/*.js'",
    "start:dev": "webpack-dev-server --hot --inline --host 0.0.0.0 --port 8080 --no-info",
    "build": "rm -rf public && webpack",
    "test:unit": "ava",
    "test:coverage": "nyc npm run test:unit"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --single-quote --write"
    ]
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@babel/register": "^7.7.4",
    "ava": "^3.5.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.3.2",
    "css-modules-require-hook": "^4.0.6",
    "enzyme": "^2.9.1",
    "eslint": "^4.1.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-semistandard": "^11.0.0",
    "eslint-config-semistandard-react": "^3.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^7.0.0",
    "nyc": "^14.1.1",
    "prettier": "^1.5.2",
    "proxyquire": "^1.8.0",
    "react-test-renderer": "^15.6.1",
    "sass-loader": "^8.0.0",
    "sinon": "^2.3.6",
    "style-loader": "^0.18.2",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "dependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint && npm run test:coverage"
    }
  },
  "ava": {
    "require": [
      "./test-utils/css-modules-compiler",
      "@babel/register"
    ],
    "babel": true,
    "extensions": [
      "jsx"
    ],
    "files": [
      "src/**/*.spec.{js,jsx}"
    ],
    "source": [
      "src/**/*.{js,jsx}"
    ]
  }
}
